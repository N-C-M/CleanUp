<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".guestuser"
    android:background="@drawable/guestmnpg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:layout_marginTop="180dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:padding="30dp"
            android:visibility="visible">

            <Button
                android:layout_width="150dp"
                android:id="@+id/guestnb"
                android:layout_height="match_parent"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:background="@drawable/nearbinpic"
                android:gravity="bottom" />

            <Button
                android:layout_width="141dp"
                android:id="@+id/guestdt"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:background="@drawable/dispospic" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:padding="30dp"
            >

            <Button
                android:layout_width="146dp"
                android:layout_height="match_parent"
                android:id="@+id/guestsn"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:background="@drawable/signupbtnguest"
                android:gravity="bottom" />

            <Button
                android:layout_width="141dp"
                android:id="@+id/guestrep"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:background="@drawable/reportpic" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>